@page
@model kütüphane.Pages.IletisimModel
@{
    ViewData["Title"] = "İletişim";
    Layout = "_Layout";
}

<style>
    <style >
    body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin-top: -150px; /* Yukarı taşıma miktarı */
    }

    .card {
        width: 400px;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border: 2px solid #4361D8; /* Dış şerit rengi */
    }

    h1 {
        color: #3498db;
        font-size: 28px;
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        font-size: 16px;
        color: #555;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        box-sizing: border-box;
        border: 1px solid #3498db;
        border-radius: 5px;
    }

    button {
        background-color: #3498db;
        color: white;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: background-color 0.3s;
        padding: 15px 20px;
        font-size: 18px;
        width: 100%;
    }

        button:hover {
            background-color: #2980b9;
        }

   
    }
</style>

<div class="container">
    <div class="card">
        <h1>İletişim</h1>

        <form method="post">
            <div class="mb-3">
                <label for="name">Ad Soyad</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="mb-3">
                <label for="email">E-Posta Adresi</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>

            <div class="mb-3">
                <label for="message">Mesajınız</label>
                <textarea class="form-control" id="message" name="message" rows="4" required></textarea>
            </div>

            <button type="submit">Gönder</button>
        </form>
    </div>
</div>

<script>
    document.getElementById("contactForm").addEventListener("submit", function (event) {
        event.preventDefault();
        alert("Mesajınız alındı. Teşekkür ederiz!");
        // Burada gerçek bir form gönderme işlemi yapabilirsiniz.
        // Örneğin: document.getElementById("contactForm").submit();
    });
</script>
