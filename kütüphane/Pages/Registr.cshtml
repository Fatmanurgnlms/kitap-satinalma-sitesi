@page
@model kütüphane.Pages.RegistrModel
@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f8f8;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 350px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            text-align: center;
            border-radius: 15px;
            border: 2px solid #4361D8;
            overflow: hidden;
        }

            .container form div {
                text-align: center;
            }

                .container form div label {
                    display: block;
                    text-align: left;
                    margin-bottom: 5px;
                }

                .container form div input[type="text"],
                .container form div input[type="password"] {
                    width: 100%;
                    padding: 12px 20px;
                    margin: 8px 0;
                    display: inline-block;
                    border: 1px solid #4361D8;
                    box-sizing: border-box;
                    border-radius: 5px;
                }

        button {
            width: 100%;
            padding: 14px 20px;
            margin: 8px 0;
            background-color: #4361D8;
            color: white;
            border: none;
            border-radius: 7px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #2148a7;
                opacity: 0.8;
            }

        .signup-link, .forgot-link {
            text-align: center;
            margin-top: 15px;
            font-size: 14px;
            color: #333;
        }

            .signup-link a {
                text-decoration: none;
                color: #4361D8;
                font-weight: bold;
                transition: color 0.3s;
            }

                .signup-link a:hover {
                    color: #2148a7;
                }

        .error-message {
            color: red;
            margin-top: 10px;
        }

        h2 {
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container">
        <form method="post">
            <h2>Kayıt Ol</h2>
            <div>
                <label for="ad">Ad:</label>
                <input type="text" id="ad" name="ad" asp-for="ad" required>
            </div>
            <div>
                <label for="sifre">Şifre:</label>
                <input type="password" id="sifre" name="sifre" asp-for="sifre" required>
            </div>
            <div>
                <button type="submit">Register</button>
            </div>

            <div class="error-message">
                @Model.ErrorMessage
            </div>
        </form>

        <div class="signup-link">
            <p>Already have an account? <a href="/Login">Log in</a></p>
        </div>
    </div>

   
</body>>
</html>
