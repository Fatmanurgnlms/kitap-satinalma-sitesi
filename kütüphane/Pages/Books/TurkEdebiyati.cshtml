@page
@model WebApplication6.Pages.Books.TurkEdebiyati

@{
    Layout = "_Layout";
}

<style>
    .page-title {
        text-align: center;
        font-size: 36px;
        color: #3498db;
        margin-bottom: 30px;
    }

    .book-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        justify-content: space-between;
    }

    .book {
        display: inline-block;
        margin: 15px;
        padding: 15px;
        border: 1px solid #ecf0f1;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        cursor: pointer;
    }

        .book:hover {
            transform: scale(1.05);
        }

        .book img {
            max-width: 100%;
            height: 150px; /* veya istediğiniz yüksekliği burada belirtin */
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            display: block;
            margin: 0 auto; /* Resimi ortala */
        }

    .book-details {
        padding: 10px;
        text-align: center;
    }

    .add-to-cart-btn {
        background-color: #3498db;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 18px;
        transition: background-color 0.3s ease-in-out;
        margin-top: 10px; /* Boşluk eklemek için */
    }

        .add-to-cart-btn:hover {
            background-color: #2980b9;
        }

    /* Modal stilleri */
    .modal {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        align-items: center;
        justify-content: center;
    }

    .modal-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        max-width: 600px;
        width: 100%;
        text-align: center;
        position: relative;
    }

    .close {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 20px;
        cursor: pointer;
    }
</style>

<div class="container">
    <h1 class="page-title">Türk Edebiyatı</h1>

    <div class="book-container" id="bookContainer">
        @foreach (var book in Model.Books)
        {
            <div class="book" onclick="openBookDetailsModal('@book.Title', '@book.Author', '@book.Price', '@book.ImageUrl')">
                <img src="@book.ImageUrl" alt="@book.Title" />
                <div class="book-details">
                    <div class="book-title">@book.Title</div>
                    <div class="book-author">@book.Author</div>
                    <div class="book-price">$@book.Price</div>
                    <button class="add-to-cart-btn" onclick="addToCart('@book.Title')">Sepete Ekle</button>
                </div>
            </div>
        }
    </div>

    <!-- Modal -->
    <div class="modal" id="bookDetailsModal">
        <div class="modal-content">
            <span class="close" onclick="closeBookDetailsModal()">&times;</span>
            <div id="modalContent"></div>
        </div>
    </div>
</div>

<script>function openBookDetailsModal(title, author, price, imageUrl) {
        var modal = document.getElementById("bookDetailsModal");
        var modalContent = document.getElementById("modalContent");

        // Modal içeriği oluştur
        var content = `
            <img src="${imageUrl}" alt="${title}" style="max-width: 100%; height: auto; border-top-left-radius: 10px; border-top-right-radius: 10px; display: block; margin: 0 auto;" />
            <div class="book-details">
                <div class="book-title">${title}</div>
                <div class="book-author">${author}</div>
                <div class="book-price">$${price}</div>
                <button class="add-to-cart-btn" onclick="addToCart('${title}')">Sepete Ekle</button>
            </div>
        `;
        modalContent.innerHTML = content;

        // Modal'ı görünür yap
        modal.style.display = "flex";
    }

    function closeBookDetailsModal() {
        var modal = document.getElementById("bookDetailsModal");
        modal.style.display = "none";
    }

    function addToCart(title) {
        alert(title + " sepete eklendi!");
    }</script>
